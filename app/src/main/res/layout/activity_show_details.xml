<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowDataActivity"
    android:padding="16dp">


    <TextView
        android:id="@+id/tv_route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route Name"
        android:textSize="26dp"
        android:textAppearance="@android:style/TextAppearance.Medium"/>

    <TextView
        android:id="@+id/tv_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_route_name"
        android:layout_marginTop="@dimen/place_autocomplete_button_padding"
        android:inputType="text"
        android:text="Distance"

        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_latitude"
        android:layout_marginTop="@dimen/place_autocomplete_button_padding"
        android:text="Time:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/tv_route_name_set"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_latitude"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/tv_route_name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_distance_set"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_latitude"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/tv_latitude"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_time_set"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_time"
        android:layout_marginStart="105dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/tv_time"

        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="@dimen/place_autocomplete_button_padding"
        android:text="Button" />


</RelativeLayout>